      <view bindtap="$pdfView$jobLectureList$viewResume" data-wpyviewresume-a="{{$pdfView$jobLectureList$item}}">
				
  <view class="list-row" wx:if="{{$pdfView$jobLectureList$jobType==1}}">
    <view class="weui-flex between list-col-1">
      <text class="page__title text-line">{{$pdfView$jobLectureList$item.job_name}}</text>
      <view class="number">{{$pdfView$jobLectureList$item.salary}}</view>
    </view>
    <view class="page__desc">招{{$pdfView$jobLectureList$item.number}}人 | {{$pdfView$jobLectureList$item.edu}} | {{$pdfView$jobLectureList$item.province}}{{$pdfView$jobLectureList$item.city}}{{$pdfView$jobLectureList$item.area}}</view>
    <view class="weui-flex start text-line">
      <view class="weui-flex start weui-flex__item">
        <view class="card-item weui-flex center">{{$pdfView$jobLectureList$item.social_security}}</view>
      </view>
      <button class="weui-btn_cell weui-btn_primary"  wx:if="{{$pdfView$jobLectureList$jobItem$isShowBtn&&$pdfView$jobLectureList$item.is_apply!=1}}" catchtap="$pdfView$jobLectureList$jobItem$deliverResume" data-com-index="{{$pdfView$jobLectureList$index}}" data-wpydeliverresume-a="{{$pdfView$jobLectureList$item}}">投递简历</button>
      <view class="number"  wx:if="{{$pdfView$jobLectureList$jobItem$isShowBtn&&$pdfView$jobLectureList$item.is_apply==1}}">已投递</view>
    </view>
  </view>

				
  <view class="list-row" wx:if="{{$pdfView$jobLectureList$jobType==2}}">
    <view class="weui-flex between list-col-1">
      <text class="page__title text-line">{{$pdfView$jobLectureList$item.job_name}}</text>
      <view class="number">{{$pdfView$jobLectureList$item.salary_min}}~{{$pdfView$jobLectureList$item.salary_max}}</view>
    </view>
    <view class="page__desc">招{{$pdfView$jobLectureList$item.number}}人 | {{$pdfView$jobLectureList$item.eduName}} | {{$pdfView$jobLectureList$item.provinceName}}</view>
    <view class="weui-flex start">
      <view class="weui-flex start weui-flex__item">  
        <view class="card-item">{{$pdfView$jobLectureList$item.natureName}}</view>
        <view class="card-item">{{$pdfView$jobLectureList$item.social_securityName}}</view>
      </view>
      <view class="page__desc"  wx:if="{{$pdfView$jobLectureList$jobLectureItem$rendaUserType==1}}">共有{{$pdfView$jobLectureList$item.reasumeNum}}人投递</view> 
      <button class="weui-btn_cell weui-btn_primary"  wx:if="{{$pdfView$jobLectureList$jobLectureItem$rendaUserType==2&&$pdfView$jobLectureList$item.isApply!=1}}" catchtap="$pdfView$jobLectureList$jobLectureItem$deliverResume" data-com-index="{{$pdfView$jobLectureList$index}}" data-wpydeliverresume-a="{{$pdfView$jobLectureList$item}}">投递简历</button>
      <view class="number" wx:if="{{$pdfView$jobLectureList$jobLectureItem$rendaUserType==2&&$pdfView$jobLectureList$item.isApply==1}}">已投递</view>
    </view>
  </view>

			</view>
    </block>
		<view wx:if="{{!$pdfView$jobLectureList$list.length}}" class="page_list">
			<image src="https://d.rsd123.com/uploads/images/noData.png" class="page_noData" mode="scaleToFill"/>
			<view class="page_noData_text">暂无数据！</view>
		</view>
	</view>

        <view class="container view_padding" wx:if="{{$pdfView$activeIndex==1}}">
          <rich-text nodes="{{$pdfView$lectureInfo.invitation_letter}}" class="my-text-right weui-textarea"/>
        </view>
        <view class="canvas-box" wx:if="{{$pdfView$activeIndex==0}}">
          <view class="cell weui-flex between page_bottom">
            <view class=" weui-flex start">
              <image src="http://ttxsg.com.cn:39009/uploads/img/pdf.png" class="pdf_icon" mode="aspectFill"/>
              <view class="page__title weui-flex start" wx:if="{{!$pdfView$enclosure}}" bindtap="$pdfView$uploadFile">
                <text class="text-line pdfName page__text__active" wx:if="{{$pdfView$rendaUserType==1&&$pdfView$uid == $pdfView$lectureInfo.com_uid&&$pdfView$lectureInfo.status!=4}}">点击上传演示文稿</text>
                <text class="text-line pdfName page__desc" wx:else>暂无附件</text>
              </view>
              <view class="page__title weui-flex start" wx:else bindtap="$pdfView$viewPdf">
                <text class="text-line pdfName">{{$pdfView$pdfName}}</text>
              </view>
            </view>
            <image bindtap="$pdfView$deleteFile" src=" http://ttxsg.com.cn:39009/uploads/img/delete.png" class="avatar_icon" wx:if="{{$pdfView$enclosure&&$pdfView$lectureInfo.status!=5&&$pdfView$rendaUserType==1}}" mode="aspectFill"/>
          </view>
          <image src="http://ttxsg.com.cn:39009/uploads/images/image/left_icon.png" alt="" class="swiper-icon" mode="widthFix" bindtap="$pdfView$preImg" wx:if="{{$pdfView$pdfList.length}}"/>
          <image src="http://ttxsg.com.cn:39009/uploads/images/image/right_icon.png" alt="" class="swiper-icon swiper-icon1" mode="widthFix" bindtap="$pdfView$nextImg" wx:if="{{$pdfView$pdfList.length}}"/>
          <swiper class="swiper" current="{{$pdfView$page}}" bindchange="$pdfView$bindchange" bindanimationfinish="$pdfView$changeFinish">
            <block wx:for="{{$pdfView$pdfList}}" wx:key="index">
              <swiper-item class="swiper-item" bindtap="$pdfView$viewImg" data-wpyviewimg-a="{{item}}">
                <image src="{{item.image}}" alt="" class="swiper-image shadow" mode="widthFix"/>
              </swiper-item>
            </block>
          </swiper>
          <view class="page__title page-box" wx:if="{{$pdfView$pdfList.length}}">{{$pdfView$page+1}}/{{$pdfView$total}}</view>
        </view>
      </view>
  </view>

    </scroll-view>
    <view class="apply_btn weui-flex center" bindtap="submit" wx:if="{{!lectureInfo.alectureApplyNum&&rendaUserType==2}}">立即免费报名</view>
    <view class="apply_btn weui-flex center" bindtap="handleOver" wx:if="{{lectureInfo.alectureApplyNum&&rendaUserType==2}}">{{roomID&&lectureInfo.status==5?'观看宣讲':'宣讲未开始'}}</view>
    <view class="apply_btn weui-flex center" bindtap="handleOver" wx:if="{{rendaUserType==1&&uid==com_uid}}">{{overBtnShow?'结束宣讲':'开始宣讲'}}</view>
    
  <view hidden="{{$actionSheet$isScaleModal}}">
    <view bindtap="$actionSheet$handleClose"  wx:if="{{$actionSheet$isShow}}" class="modal_mask"/>
    <view class="modal_transform g_transition3s {{ $actionSheet$isShow ? 'g_scale1': ''}}" id="modal-box" style="height:{{$actionSheet$height}}rpx">
      <view class="modal-page_card">
        <image mode="scaleToFill" src="https://d.rsd123.com/uploads/images/close.png"  wx:if="{{$actionSheet$isShow}}" class="close-icon" bindtap="$actionSheet$handleClose"/>
        <view wx:if="{{!$actionSheet$title}}" class="modal-content">
          <view class="modal_text weui-flex center">{{$actionSheet$text}}</view>
          <view class="weui-flex around modal-btn">
            <text class="weui-flex__item weui-flex center" bindtap="$actionSheet$handleClose">取消</text>
