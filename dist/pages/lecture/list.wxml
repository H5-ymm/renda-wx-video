
  <view class="page-home">
    <scroll-view scroll-y="true" refresher-enabled="true" bindscrolltolower="searchScrollLower" class="view_auto {{rendaUserType==1 ? 'view-content': 'page'}}" bindrefresherrefresh="bindrefresherrefresh">
      <swiper autoplay="true" circular="true" class="swipe-container view_padding"  wx:if="{{banner.length}}"> 
        <block wx:for="{{banner}}" wx:key="index">
          <swiper-item class="swipe-box" bindtap="viewLecture" data-wpyviewlecture-a="{{item}}">
            <view class="bg"/>
            <view class="bg1"/>
            <view class="bg2"/>
            <view class="video_file">
              <video name="media" controls="{{controls}}" showCenterPlayBtn="{{controls}}" src="{{item.enclosure}}" preload="auto" wx:if="{{item.type==1}}">
              </video>
              <image src="{{item.enclosure}}" mode="aspectFill" alt="" wx:if="{{item.type==2}}" class="swiper-image shadow"/>
            </view>
             <view class="box">
              <view class="weui-flex between">
                <view>
                  <text class="num">进行中</text>
                  <text class="time">{{item.addtime}}</text>
                </view>
                <view>
                  <image src="https://d.rsd123.com/uploads/images/image/people.png" class="people_icon" mode="aspectFill"/>
                  <text class="num">{{item.addNum}}人</text>
                </view>
              </view>
            </view>
            <view class="cell weui-flex start">
              <image src="{{item.logo_url}}" class="avatar_icon" mode="aspectFill"/>
              <view class="page__text__active text-line">{{item.title}}</view>
            </view>
          </swiper-item>
        </block>
      </swiper>
      <view class="section"  wx:if="{{list1.length}}">
        <view class="page__title">即将开始</view>
        <view class="welfare_swiper">
            <swiper class="swiper" circular="true" previous-margin="{{previous}}">
              <block wx:for="{{list1}}" wx:key="index">
                <swiper-item class="swiper-item swipe-box" bindtap="viewLecture" data-wpyviewlecture-a="{{item}}">
                  <view class="bg2"/>
                  <view class="video_file">
                    <video name="media" controls="{{controls}}" showCenterPlayBtn="{{controls}}" src="{{item.enclosure}}" wx:if="{{item.type==1}}">
                    </video>
                    <image src="{{item.enclosure}}" mode="aspectFill" alt="" wx:if="{{item.type==2}}" class="swiper-image shadow"/>
                  </view>
                  <view class="weui-flex start line line1">
                    <image src="{{item.logo_url}}" class="avatar_icon" mode="aspectFill"/>
                     <view class="card-right">
                      <view class="page__title text-line">{{item.title}}</view>
                      <view class="page__desc">{{item.starttime}}</view>
                    </view>
                  </view>
                </swiper-item>
              </block>
            </swiper>
          </view>
      </view>
      <view class="section section1" wx:if="{{list2.length}}">
        <view class="page__title">宣讲回看</view>
        <view class="swipe-container" wx:for="{{list2}}" wx:key="index">
          <view class="weui-flex start line line1">
            <image src="{{item.logo_url}}" class="avatar_icon" mode="aspectFill"/>
              <view>
              <view class="page__title">{{item.title}}</view>
              <view class="page__desc">{{item.com_name}}</view>
            </view>
          </view>
          <view class="swipe-box swipe-end" bindtap="viewLecture" data-wpyviewlecture-a="{{item}}">
            <view class="bg2"/>
            <view class="video_file">
              <video name="media" controls="{{controls}}" showCenterPlayBtn="{{controls}}" src="{{item.back_url}}">
              </video>
            </view>
            <view class="line weui-flex between">
              <view class="page__title">{{item.addtime}}</view>
              <view class="page__title">{{item.addNum}}人</view>
            </view>
          </view>
        </view>
      </view>
    </scroll-view>
    <view class="apply_btn weui-flex center" wx:if="{{rendaUserType==1}}" bindtap="applyLecture">申请云宣讲会</view>
    
  <view hidden="{{$actionSheet$isScaleModal}}">
    <view bindtap="$actionSheet$handleClose"  wx:if="{{$actionSheet$isShow}}" class="modal_mask"/>
    <view class="modal_transform g_transition3s {{ $actionSheet$isShow ? 'g_scale1': ''}}" id="modal-box" style="height:{{$actionSheet$height}}rpx">
      <view class="modal-page_card">
        <image mode="scaleToFill" src="https://d.rsd123.com/uploads/images/close.png"  wx:if="{{$actionSheet$isShow}}" class="close-icon" bindtap="$actionSheet$handleClose"/>
        <view wx:if="{{!$actionSheet$title}}" class="modal-content">
          <view class="modal_text weui-flex center">{{$actionSheet$text}}</view>
          <view class="weui-flex around modal-btn">
            <text class="weui-flex__item weui-flex center" bindtap="$actionSheet$handleClose">取消</text>
            <text class="active weui-flex__item weui-flex center" bindtap="$actionSheet$handleOk">{{$actionSheet$okText}}</text>
          </view>
        </view>
        <view wx:else class="select-user">
          <view class="modal_title weui-flex center">{{$actionSheet$title}}</view>
          <view class="modal_text weui-flex center">{{$actionSheet$text}}</view>
          <view class="weui-flex center modal-btn wrap">
            <view class="col weui-flex center" bindtap="$actionSheet$selectUser" data-wpyselectuser-a="1">我是企业招聘者</view>
            <view class="col weui-flex center" bindtap="$actionSheet$selectUser" data-wpyselectuser-a="2">我是个人求职者</view>
          </view>
        </view>
      </view>
    </view>
  </view>

 </view>