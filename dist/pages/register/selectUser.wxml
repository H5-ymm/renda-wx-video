
	<view class="home-view register-view page_margin">
		<view class="home-view-box weui-flex between">
			<block  wx:for="{{menus}}" wx:key="index">
				<view class="card-item weui-flex between wrap {{activeIndex==index?'card-item-active':''}}" bindtap="selectType" data-wpyselecttype-a="{{index}}">
					<image src="{{item.icon}}" alt="" mode="aspectFill" class="menu-icon"/>
					<view class="card-item-title">{{item.title}}</view>
					<view class="card-item-content">
						<text decode="{{true}}">{{item.content}}</text>
						<text class="card-text">...</text>
					</view>
					<image src="https://a.rsd123.com/image/images/active.png" alt="" wx:if="{{activeIndex==index}}" mode="aspectFit" class="menu-icon-select"/>
				</view>
			</block>
		</view>
		<view class="weui-cell_btn weui-flex center">
			<button class="weui-btn_cell weui-btn_primary" bindtap="next">下一步</button>
		</view>
		
  <view hidden="{{$modalUser$isScaleModal}}">
    <view bindtap="$modalUser$ handleClose"  wx:if="{{$modalUser$isShow}}" class="modal_mask"/>
    <view class="modal_box transition3s {{ $modalUser$isShow ? 'g_scale1': ''}}" id="modal-box" style="height:{{$modalUser$height}}rpx">
      <view class="modal-content"  wx:if="{{!$modalUser$type}}">
        <view class="home-view-box weui-flex between wrap">
          <view class="modal-title ">请选择团队性质</view>
          <block wx:for="{{$modalUser$menus}}" wx:key="index">
            <view class="card-item weui-flex between wrap" bindtap="$modalUser$selectType" data-wpyselecttype-a="{{index}}">
              <image src="{{item.icon}}" alt="" mode="aspectFill" class="menu-icon"/>
              <view class="card-item-title">{{item.title}}</view>
              <text class="card-item-content" decode="{{$modalUser$true}}">{{item.content}}</text>
              <image src="https://a.rsd123.com/image/images/user/radio2.png" alt="" mode="aspectFill" wx:if="{{index==$modalUser$activeIndex}}" class="radio-icon"/>
              <image src="https://a.rsd123.com/image/images/user/radio1.png" wx:else alt="" mode="aspectFill" class="radio-icon"/>
            </view>
          </block>
        </view>
        <view class="weui-cell_btn weui-flex center user-btn">
          <button class="weui-btn_cell weui-btn_cell-gradient" bindtap="$modalUser$handleOk">确定</button>
        </view>
      </view>
      <view class="modal-content" wx:if="{{$modalUser$type}}">
        <view class="home-view-box weui-flex between wrap">
          <view class="modal-title">{{!$modalUser$isInviteUser?'请选择登录/注册方式':'微信授权登录'}}</view>
          <view class="weui-cell_btn weui-flex center wrap login-way {{$modalUser$isInviteUser?'login-way-add':''}}">
            <button class="weui-btn_cell weui-flex center weui-btn_cell-gradient" bindgetphonenumber="$modalUser$bindgetphonenumber" open-type="getPhoneNumber">
              <image src="https://a.rsd123.com/image/images/welcome/wx-active.png" alt="" class="login-icon"/>
              <text>微信登录/注册 </text>
            </button>
            <button class="weui-btn_cell weui-flex center" wx:if="{{!$modalUser$isInviteUser}}" bindtap="$modalUser$handleOk">
              <image src="https://a.rsd123.com/image/images/welcome/phone.png" alt="" class="login-icon"/>
              <text>手机号登录/注册</text>
            </button>
          </view>
        </view>
      </view>
      <image src="https://a.rsd123.com/image/images/close.png" bindtap="$modalUser$handleClose" class="close-icon"/>
    </view>
  </view>

	</view>