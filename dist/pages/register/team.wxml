
  <view class="home-view register-view page_margin">
    <view class="home-view-box">
      <view class="page_card">
        <view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">团队名称：</view>
            <input class="weui-input" placeholder-class="placeholder" data-name="team_name" value="{{form.team_name}}" bindinput="changeInput" placeholder="请输入团队名称"/>
          </view>
        </view>
				<view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">团队logo：</view>
            <image bindtap="uploadImg" src="{{infoImg}}" mode="scaleToFill" class="my-head"  wx:if="{{infoImg}}"/>
             <image bindtap="uploadImg" src="https://a.rsd123.com/image/images/default1.png" mode="scaleToFill" class="my-head"  wx:else/>
						<image mode="scaleToFill" bindtap="uploadImg" src="https://a.rsd123.com/image/images/right.png" class="page_down_icon"/>
          </view>
        </view>
				 <view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">姓名：</view>
            <input class="weui-input" placeholder-class="placeholder" data-name="user_name" value="{{form.user_name}}" bindinput="changeInput" placeholder="请输入姓名"/>
          </view>
        </view>
        <view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">身份证号码：</view>
            <input class="weui-input" data-name="id_card" placeholder-class="placeholder" value="{{form.id_card}}" bindinput="changeInput" placeholder="请输入身份证号码"/>
          </view>
        </view>
        <view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text weui-flex__item my-text-require">性别：</view>
            <picker bindchange="bindPickerChange" value="{{index}}" data-name="sex" range="{{array}}">
              <view class="my-text-right weui-flex between">
                <view class="{{form.sex?'':'placeholder'}}">
									{{form.sex?array[index]:'请选择性别'}}
								</view>
                <image mode="scaleToFill" src="https://a.rsd123.com/image/images/down.png" class="page_down_icon"/>
              </view>
            </picker>
          </view>
        </view>
				<view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">年龄：</view>
						<picker bindchange="bindPickerChange" data-name="age" value="{{ageIndex}}" range="{{ageList}}">
							<view class="my-text-right weui-flex between">
								<view class="{{form.age?'':'placeholder'}}">
									{{form.age?ageList[ageIndex]:'请选择年龄'}}
								</view>
								<image mode="scaleToFill" src="https://a.rsd123.com/image/images/down.png" class="page_down_icon"/>
							</view>
						</picker>
          </view>
        </view>
        <view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text weui-flex__item">学历：</view>
            <picker bindchange="bindPickerChange" data-name="education" value="{{eduIndex}}" range="{{eduList}}">
              <view class="my-text-right weui-flex between">
                <view class="{{form.education?'':'placeholder'}}"> 
                  {{form.education?eduList[eduIndex]:'请选择'}}</view>
                <image mode="scaleToFill" src="https://a.rsd123.com/image/images/down.png" class="page_down_icon"/>
              </view>
            </picker>
          </view>
        </view>
        <view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">地址：</view>
            
  <picker mode="multiSelector" bindcancel="$districtSelet$cancelPickerChange" bindchange="$districtSelet$bindMultiPickerChange" bindcolumnchange="$districtSelet$bindMultiPickerColumnChange" value="{{$districtSelet$multiIndex}}" range="{{$districtSelet$multiArray}}">
    <view class="my-text-right weui-flex between">
      <view  wx:if="{{$districtSelet$options.length}}">
        {{$districtSelet$multiArray[0][$districtSelet$multiIndex[0]]}}
        {{$districtSelet$multiArray[1][$districtSelet$multiIndex[1]]}}
        {{$districtSelet$disabled?$districtSelet$multiArray[2][$districtSelet$multiIndex[2]]:''}}
      </view>
      <view  wx:else class="placeholder">请选择地址</view>
      <image mode="scaleToFill" src="https://a.rsd123.com/image/images/down.png" class="page_card_icon"/>
    </view>
  </picker>

          </view>
        </view>
         <view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text weui-flex__item my-text-require">团队介绍：</view>
          </view>
          <textarea data-name="introduction" placeholder-class="placeholder" disable-default-padding="true" bindlinechange="bindlinechange" class="weui-input weui-textarea" value="{{form.introduction}}" bindinput="changeInput" placeholder="请输入团队介绍" maxlength="-1"/>
        </view>
      </view>
    </view>
    <view class="weui-cell_btn weui-flex center register-btn">
      <button class="weui-btn_cell weui-btn_primary" bindtap="save">完成注册</button>
    </view>
    
  <view hidden="{{$teamModal$isScaleModal}}">
    <view bindtap="$teamModal$handleOk"  wx:if="{{$teamModal$isShow}}" class="modal_mask"/>
    <view class="modal_box transition3s {{ $teamModal$isShow ? 'g_scale1': ''}}" id="modal-box" style="height:{{$teamModal$height}}rpx">
      <view class="modal-content"  wx:if="{{!$teamModal$type}}">
        <view class="modal-bg">
          <image src="{{$teamModal$modalObj.imgBg}}" mode="aspectFill" class="modal-img-bg"/>
        </view>
        <view class="modal-title">
          {{$teamModal$modalObj.title}}
        </view>
        <text selectable="true" decode="{{$teamModal$true}}" class="modal-subTitle" wx:if="{{$teamModal$modalObj.subTitle}}">{{$teamModal$modalObj.subTitle}}</text>
        <view class="weui-cell_btn weui-flex center">
          <navigator open-type="{{$teamModal$openType}}" wx:if="{{$teamModal$openType}}" target="miniProgram" class="navigator">
            <button class="weui-btn_cell weui-btn_cell-gradient" bindtap="$teamModal$handleOk">我知道啦</button>
          </navigator>
          <view class="navigator" wx:else>
            <button class="weui-btn_cell weui-btn_cell-gradient" bindtap="$teamModal$handleOk">我知道啦</button>
          </view>
        </view>
      </view>
      <view wx:else class="modal-content modal-content-qrcode">
        <image src="{{$teamModal$imgUrl}}" bindlongpress="$teamModal$saveImg" class="qrcode-img"/>
        <view class="weui-cell_btn weui-flex center user-btn">
          <button open-type="share" class="weui-btn_cell weui-btn_cell-gradient" bindtap="$teamModal$handleOk">长按图片保存二维码并分享</button>
        </view>
      </view>
      <image src="https://a.rsd123.com/image/images/close.png" bindtap="$teamModal$handleOk" class="close-icon"/>
    </view>
  </view>


    <canvas canvas-id="canvas" style="width:{{cWidth}}px;height:{{cHeight}}px;position: absolute;left:-1000px;top:-1000px;"/>
  </view>