
  <view class="home-view register-view page_margin page__bd">
    <view>
      <view class="page_card">
        <view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">企业名称：</view>
            <input class="weui-input" placeholder-class="placeholder" data-name="com_name" value="{{form.com_name}}" bindinput="changeInput" placeholder="请输入企业名称"/>
          </view>
        </view>
				<view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">企业logo：</view>
            <image bindtap="uploadImg" src="{{infoImg}}" mode="scaleToFill" class="my-head"  wx:if="{{infoImg}}"/>
						<image bindtap="uploadImg" src="https://a.rsd123.com/image/images/default1.png" mode="scaleToFill" class="my-head"  wx:else/>
						<image mode="scaleToFill" bindtap="uploadImg" src="https://a.rsd123.com/image/images/right.png" class="page_down_icon"/>
          </view>
        </view>
    	  
  <view>
    <view class="page_card_row">
      <view class="weui-flex between">
        <view class="my-text  weui-flex__item my-text-require">上传营业执照：</view>
        <image bindtap="$company$uploadImg" src="{{$company$infoImg}}" mode="scaleToFill" class="my-head"  wx:if="{{$company$infoImg}}"/>
        <image bindtap="$company$uploadImg" src="https://a.rsd123.com/image/images/default2.png" mode="scaleToFill" class="my-head"  wx:else/>
        <image mode="scaleToFill" bindtap="$company$uploadImg" src="https://a.rsd123.com/image/images/right.png" class="page_down_icon"/>
      </view>
    </view>
    <view class="page_card_row">
      <view class="weui-flex between">
        <view class="my-text  weui-flex__item my-text-require">营业执照号：</view>
        <input class="weui-input" placeholder-class="placeholder" data-name="business_licence" value="{{$company$form.business_licence}}" bindinput="$company$changeInput" placeholder="请输入营业执照号"/>
      </view>
    </view>
    <view class="page_card_row" wx:if="{{$company$registerType==1}}">
      <view class="weui-flex between">
        <view class="my-text  weui-flex__item my-text-require">统一社会信用代码：</view>
        <input class="weui-input" placeholder-class="placeholder" data-name="unified_social" value="{{$company$form.unified_social}}" bindinput="$company$changeInput" placeholder="请输入统一社会信用代码"/>
      </view>
    </view>
    <view class="page_card_row">
      <view class="weui-flex between">
        <view class="my-text  weui-flex__item my-text-require">从事行业：</view>
        <picker bindchange="$company$bindPickerChange" value="{{$company$jobIndex}}" data-name="job_id" range="{{$company$job_array}}">
          <view class="my-text-right weui-flex between">
            <view class="{{$company$form.job_id!=''?'':'placeholder'}}">
              {{$company$form.job_id!=''?$company$job_array[$company$jobIndex]:'请选择从事行业'}}
            </view>
            <image mode="scaleToFill" src="https://a.rsd123.com/image/images/down.png" class="page_down_icon"/>
          </view>
        </picker>
      </view>
    </view>
    <view class="page_card_row">
      <view class="weui-flex between">
        <view class="my-text  weui-flex__item my-text-require">企业性质：</view>
        <picker bindchange="$company$bindPickerChange" value="{{$company$comIndex}}" data-name="com_type" range="{{$company$com_type}}">
          <view class="my-text-right weui-flex between">
            <view class="{{$company$form.com_type!=''?'':'placeholder'}}">
              {{$company$form.com_type!=''?$company$com_type[$company$comIndex]:'请选择企业性质'}}
            </view>
            <image mode="scaleToFill" src="https://a.rsd123.com/image/images/down.png" class="page_down_icon"/>
          </view>
        </picker>
      </view>
    </view>
    <view class="page_card_row">
      <view class="weui-flex between">
        <view class="my-text  weui-flex__item my-text-require">企业规模：</view>
        <picker bindchange="$company$bindPickerChange" data-name="com_scale" value="{{$company$comScaleIndex}}" range="{{$company$com_scale}}">
          <view class="my-text-right weui-flex between">
            <view class="{{$company$form.com_scale!=''?'':'placeholder'}}">
              {{$company$form.com_scale!=''?$company$com_scale[$company$comScaleIndex]:'请选择企业规模'}}
            </view>
            <image mode="scaleToFill" src="https://a.rsd123.com/image/images/down.png" class="page_down_icon"/>
          </view>
        </picker>
      </view>
    </view>
    <view class="page_card_row">
      <view class="weui-flex between">
        <view class="my-text  weui-flex__item my-text-require">企业地址：</view>
        
  <picker mode="multiSelector" bindcancel="$company$districtSelet$cancelPickerChange" bindchange="$company$districtSelet$bindMultiPickerChange" bindcolumnchange="$company$districtSelet$bindMultiPickerColumnChange" value="{{$company$districtSelet$multiIndex}}" range="{{$company$districtSelet$multiArray}}">
    <view class="my-text-right weui-flex between">
      <view  wx:if="{{$company$districtSelet$options.length}}">
        {{$company$districtSelet$multiArray[0][$company$districtSelet$multiIndex[0]]}}
        {{$company$districtSelet$multiArray[1][$company$districtSelet$multiIndex[1]]}}
        {{$company$districtSelet$disabled?$company$districtSelet$multiArray[2][$company$districtSelet$multiIndex[2]]:''}}
      </view>
      <view  wx:else class="placeholder">请选择地址</view>
      <image mode="scaleToFill" src="https://a.rsd123.com/image/images/down.png" class="page_card_icon"/>
    </view>
  </picker>

      </view>
    </view>
    <view class="page_card_row">
      <view class="weui-flex end">
        <input class="weui-input" placeholder-class="placeholder" data-name="address" value="{{$company$form.address}}" bindinput="$company$changeInput" placeholder="请输入详细地址"/>
      </view>
    </view>
    <view class="page_card_row">
      <view class="weui-flex between">
        <view class="my-text  weui-flex__item">企业电话：</view>
        <view class="weui-flex between weui-flex__item">
          <input class="weui-input" placeholder-class="placeholder" placeholder="区号" data-name="phone" value="{{$company$form.phone}}" bindinput="$company$changeInput"/>
          <view class="line">-</view>
          <input class="weui-input" placeholder-class="placeholder" placeholder="座机电话" data-name="phoneEnd" value="{{$company$form.phoneEnd}}" bindinput="$company$changeInput"/>
        </view>
      </view>
    </view>
    <canvas canvas-id="canvas" style="width:{{$company$cWidth}}px;height:{{$company$cHeight}}px;position: absolute;left:-1000px;top:-1000px;"/>
  </view>

				<view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">联系人：</view>
            <input class="weui-input" placeholder-class="placeholder" data-name="link_man" value="{{form.link_man}}" bindinput="changeInput" placeholder="请输入联系人"/>
          </view>
        </view>
				<view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">联系人电话：</view>
            <input class="weui-input" data-name="link_phone" placeholder-class="placeholder" value="{{form.link_phone}}" bindinput="changeInput" placeholder="请输入联系人电话"/>
          </view>
        </view>
         <view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">企业介绍：</view>
          </view>
					 <textarea data-name="content" placeholder-class="placeholder" class="weui-input weui-textarea" value="{{form.content}}" bindinput="changeInput" placeholder="请输入企业介绍" auto-height/>
        </view>
      </view>
    </view>
    <view class="weui-cell_btn weui-flex center register-btn">
      <button class="weui-btn_cell weui-btn_primary" bindtap="save">完成注册</button>
    </view>
		 
  <view hidden="{{$companyModal$isScaleModal}}">
    <view bindtap="$companyModal$handleOk"  wx:if="{{$companyModal$isShow}}" class="modal_mask"/>
    <view class="modal_box transition3s {{ $companyModal$isShow ? 'g_scale1': ''}}" id="modal-box" style="height:{{$companyModal$height}}rpx">
      <view class="modal-content"  wx:if="{{!$companyModal$type}}">
        <view class="modal-bg">
          <image src="{{$companyModal$modalObj.imgBg}}" mode="aspectFill" class="modal-img-bg"/>
        </view>
        <view class="modal-title">
          {{$companyModal$modalObj.title}}
        </view>
        <text selectable="true" decode="{{$companyModal$true}}" class="modal-subTitle" wx:if="{{$companyModal$modalObj.subTitle}}">{{$companyModal$modalObj.subTitle}}</text>
        <view class="weui-cell_btn weui-flex center">
          <navigator open-type="{{$companyModal$openType}}" wx:if="{{$companyModal$openType}}" target="miniProgram" class="navigator">
            <button class="weui-btn_cell weui-btn_cell-gradient" bindtap="$companyModal$handleOk">我知道啦</button>
          </navigator>
          <view class="navigator" wx:else>
            <button class="weui-btn_cell weui-btn_cell-gradient" bindtap="$companyModal$handleOk">我知道啦</button>
          </view>
        </view>
      </view>
      <view wx:else class="modal-content modal-content-qrcode">
        <image src="{{$companyModal$imgUrl}}" bindlongpress="$companyModal$saveImg" class="qrcode-img"/>
        <view class="weui-cell_btn weui-flex center user-btn">
          <button open-type="share" class="weui-btn_cell weui-btn_cell-gradient" bindtap="$companyModal$handleOk">长按图片保存二维码并分享</button>
        </view>
      </view>
      <image src="https://a.rsd123.com/image/images/close.png" bindtap="$companyModal$handleOk" class="close-icon"/>
    </view>
  </view>


  </view>