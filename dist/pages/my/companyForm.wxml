
  <view class="page__company add-view page">
    <view class="view-content1 view_auto">
      <view class="page_form">
        <view class="list-row">
          <view class="weui-flex start">
            <view class="my-text my-text-require">企业名称</view>
            <input class="weui-input" placeholder-class="placeholder" data-name="com_name" value="{{form.com_name}}" bindinput="changeInput" placeholder="请输入企业名称"/>
          </view>
        </view>
    	  <view class="list-row">
					<view class="weui-flex start">
						<view class="my-text my-text-require">所属区域</view>
						
  <picker mode="multiSelector" bindcancel="$districtSelet$cancelPickerChange" bindchange="$districtSelet$bindMultiPickerChange" bindcolumnchange="$districtSelet$bindMultiPickerColumnChange" value="{{$districtSelet$multiIndex}}" range="{{$districtSelet$multiArray}}">
    <view class="my-text-right weui-flex between">
      <view  wx:if="{{$districtSelet$options.length}}">
        {{$districtSelet$multiArray[0][$districtSelet$multiIndex[0]]}}
        {{$districtSelet$multiArray[1][$districtSelet$multiIndex[1]]}}
        {{$districtSelet$disabled?$districtSelet$multiArray[2][$districtSelet$multiIndex[2]]:''}}
      </view>
      <view  wx:else class="placeholder">请选择地址</view>
      <image mode="scaleToFill" src="../../images/right.png" class="page_right_icon"/>
    </view>
  </picker>

				  </view>
		  	</view>
				<view class="list-row">
					<view class="weui-flex start">
						<view class="my-text my-text-require">所属行业</view>
						<picker bindchange="bindPickerChange" value="{{jobIndex}}" data-name="trades" range="{{job_array}}">
							<view class="my-text my-text-require-right weui-flex start">
								<view class="{{form.trades!=''?'':'placeholder'}}">
									{{form.trades!=''?job_array[jobIndex]:'请选择从事行业'}}
								</view> 
							</view>
						</picker>
					</view>
				</view>
				<view class=" list-row">
					<view class="weui-flex start">
						<view class="my-text my-text-require">企业性质</view>
						<picker bindchange="bindPickerChange" value="{{comIndex}}" data-name="nature" range="{{com_type}}">
							<view class="my-text my-text-require-right weui-flex start">
								<view class="{{form.nature!=''?'':'placeholder'}}">
									{{form.nature!=''?com_type[comIndex]:'请选择企业性质'}}
								</view>
							</view>
						</picker>
					</view>
				</view>
				<view class="list-row">
					<view class="weui-flex start">
						<view class="my-text my-text-require">企业规模</view>
						<picker bindchange="bindPickerChange" data-name="scale" value="{{comScaleIndex}}" range="{{com_scale}}">
							<view class="my-text my-text-require-right weui-flex start">
								<view class="{{form.scale!=''?'':'placeholder'}}">
									{{form.scale!=''?com_scale[comScaleIndex]:'请选择企业规模'}}
								</view>
							</view>
						</picker>
					</view>
				</view>
				<view class=" list-row">
					<view class="weui-flex start-start">
						<view class="my-text my-text-require">企业简介</view>
						<textarea data-name="content" placeholder-class="placeholder" class="weui-input weui-textarea weui-flex__item" value="{{form.content}}" bindinput="changeInput" placeholder="请输入企业简介" auto-height/>
					</view>
				</view>
				<view class=" list-row">
					<view class="weui-flex start">
						<view class="my-text my-text-require">联系人</view>
						<input class="weui-input" placeholder-class="placeholder" data-name="link_man" value="{{form.link_man}}" bindinput="changeInput" placeholder="请输入联系人"/>
					</view>
				</view>
				<view class=" list-row">
					<view class="weui-flex start">
						<view class="my-text my-text-require">手机号码</view>
						<input class="weui-input" data-name="link_tel" placeholder-class="placeholder" value="{{form.link_tel}}" bindinput="changeInput" placeholder="请输入手机号码"/>
					</view>
				</view>
				<view class="list-row">
					<view class="weui-flex between">
						<view class="weui-flex__item weui-flex start-end">
							<view class="my-text">营业执照照片上传</view>
							<view class="page__desc">图像大小不要超过5M</view>
						</view>
						<image bindtap="uploadImg" src="{{infoImg}}" mode="scaleToFill" class="my-head"  wx:if="{{infoImg}}"/>
						<image bindtap="uploadImg" src="../../images/upload.png" mode="scaleToFill" class="my-head"  wx:else/>  
					</view>
				</view>
      </view>
    </view>
    <view class="weui-cell_btn weui-flex center">
      <button class="weui-btn_cell weui-btn_primary" bindtap="save">保存</button>
    </view>
		
