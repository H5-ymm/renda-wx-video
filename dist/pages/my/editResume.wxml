
  <view class="add-view page">
    <view class="view-list">
      <view class="page_form">
        <view class="page_margin">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">姓名</view>
            <view class="weui-flex between" bindtap="selectType">
              <input class="weui-input page__label" placeholder-class="placeholder" placeholder="请输入姓名" value="{{form.from_user}}" data-name="from_user" bindinput="changeInput"/>
            </view>
          </view>
        </view>
        <view class="page_margin">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">性别</view>
            <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
              <view class="my-text-right weui-flex between">
                <view class="{{array[index]?'page__label':'placeholder'}}"> {{array[index]?array[index]:'请选择'}}</view>
                <image mode="scaleToFill" src="../../images/right.png" class="page_right_icon"/>
              </view>
            </picker>
          </view>
        </view>
        <view class="page_margin">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">出生年月</view>
            <picker mode="date" bindchange="bindDateChange">
              <view class="my-text-right weui-flex between">
                <view class="{{array[index]?'page__label':'placeholder'}}"> {{array[index]?array[index]:'请选择'}}</view>
                 <image mode="scaleToFill" src="../../images/right.png" class="page_right_icon"/>
              </view>
            </picker>
          </view>
        </view>
        <view class="page_margin">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">现居地址</view>
            
  <picker mode="multiSelector" bindcancel="$districtSelet$cancelPickerChange" bindchange="$districtSelet$bindMultiPickerChange" bindcolumnchange="$districtSelet$bindMultiPickerColumnChange" value="{{$districtSelet$multiIndex}}" range="{{$districtSelet$multiArray}}">
    <view class="my-text-right weui-flex between">
      <view  wx:if="{{$districtSelet$options.length}}">
        {{$districtSelet$multiArray[0][$districtSelet$multiIndex[0]]}}
        {{$districtSelet$multiArray[1][$districtSelet$multiIndex[1]]}}
        {{$districtSelet$disabled?$districtSelet$multiArray[2][$districtSelet$multiIndex[2]]:''}}
      </view>
      <view  wx:else class="placeholder">请选择地址</view>
      <image mode="scaleToFill" src="../../images/right.png" class="page_right_icon"/>
    </view>
  </picker>

          </view>
        </view>
         <view class="page_margin">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">求职状态</view>
            <view class="weui-flex between" bindtap="selectType">
              <view class="page__label">请选择</view>
              <image mode="scaleToFill" src="../../images/right.png" class="page_right_icon"/>
            </view>
          </view>
        </view>
         <view class="page_margin">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">邮箱</view>
            <view class="weui-flex between" bindtap="selectType">
              <input class="weui-input page__label" placeholder-class="placeholder" placeholder="请输入邮箱" value="{{form.from_user}}" data-name="from_user" bindinput="changeInput"/>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="weui-cell_btn weui-flex center">
      <button class="weui-btn_cell weui-btn_primary" bindtap="submit">保存</button>
    </view>
    
	<view hidden="{{$pickerModal$isScaleModal}}">
		<view bindtap="$pickerModal$ handleClose"  wx:if="{{$pickerModal$isShow}}" class="modal_mask"/>
		<view class="modal_box transition3s {{ $pickerModal$isShow ? 'g_scale1': ''}}" id="modal-box" style="height:{{$pickerModal$height}}rpx">
			<view class="modal-content">
        <view class="picker">
        <view class="weui-flex between picker-btn">
          <view class="weui-flex center" bindtap="$pickerModal$selectClose">
            取消
          </view>
          <view class="weui-flex center ok-btn" bindtap="$pickerModal$selectOk">
            确定
          </view>
        </view>
        <picker-view class="picker-view" indicator-class="picker-box" indicator-style="height: 40px;font-size:16px;" value="{{$pickerModal$activeIndex}}" bindchange="$pickerModal$bindChange">
          <picker-view-column>
            <block  wx:for="{{$pickerModal$list}}" wx:key="index">
              <view class="picker-view-item">{{item}}</view>
            </block>
          </picker-view-column>
          <picker-view-column>
            <block wx:for="{{$pickerModal$list}}" wx:key="index">
              <view class="picker-view-item">{{item}}</view>
            </block>
          </picker-view-column>
        </picker-view>
      </view>
			</view>
		</view>
	</view>

  </view>