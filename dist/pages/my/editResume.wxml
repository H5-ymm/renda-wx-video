
  <view class="add-view page">
    <view class="view-list">
      <view class="page_form">
        <view class="page_margin">
          <view class="weui-flex between">
            <view class="my-text weui-flex__item my-text-require">姓名</view>
            <view class="weui-flex between">
              <input class="weui-input page__label" placeholder-class="placeholder" placeholder="请输入姓名" value="{{form.nickname}}" data-name="nickname" bindinput="changeInput"/>
            </view>
          </view>
        </view>
        <view class="page_margin">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">性别</view>
            <picker bindchange="bindPickerChange" value="{{index}}" data-name="sex" range="{{array}}">
              <view class="my-text-right weui-flex between">
                <view class="{{array[index]?'page__label':'placeholder'}}"> {{array[index]?array[index]:'请选择'}}</view>
                <image mode="scaleToFill" src="../../images/right.png" class="page_right_icon"/>
              </view>
            </picker>
          </view>
        </view>
        <view class="page_margin">
          <view class="weui-flex between">
            <view class="my-text weui-flex__item my-text-require">出生年月</view>
            <picker mode="date" data-name="birthtime" bindchange="bindDateChange">
              <view class="my-text-right weui-flex between">
                <view class="{{array[index]?'page__label':'placeholder'}}"> {{array[index]?array[index]:'请选择'}}</view>
                 <image mode="scaleToFill" src="../../images/right.png" class="page_right_icon"/>
              </view>
            </picker>
          </view>
        </view>
        <view class="page_margin">
          <view class="weui-flex between">
            <view class="my-text weui-flex__item my-text-require">现居地址</view>
            
  <view class="districtSelet">
    <view class="my-text-right weui-flex between">
      <view  wx:if="{{$districtSelet$options.length}}" class="page__title">
        {{$districtSelet$multiArray[0][$districtSelet$multiIndex[0]]}}
        {{$districtSelet$multiArray[1][$districtSelet$multiIndex[1]]}}
        {{$districtSelet$disabled?$districtSelet$multiArray[2][$districtSelet$multiIndex[2]]:''}}
      </view>
      <view  wx:else class="placeholder" bindtap="$districtSelet$changeCity">请选择地址</view>
      <image mode="scaleToFill" src="../../images/right.png" class="page_right_icon"/>
    </view>
    <view hidden="{{$districtSelet$isScaleModal}}">
      <view bindtap="$districtSelet$ handleClose" wx:if="{{$districtSelet$isShow}}" class="modal_mask"/>
      <view class="modal_box transition3s {{ $districtSelet$isShow ? 'g_scale1': ''}}" id="modal-box" style="height:{{$districtSelet$height}}rpx">
        <view class="modal-content">
          <view class="picker">
            <view class="weui-flex between picker-btn">
              <view class="weui-flex center" bindtap="$districtSelet$selectClose">
                取消
              </view>
              <view class="weui-flex center ok-btn" bindtap="$districtSelet$selectOk">
                确定
              </view>
            </view>
            <picker-view class="picker-view" indicator-class="picker-box" indicator-style="height: 40px;font-size:16px;" value="{{$districtSelet$activeIndex}}" bindchange="$districtSelet$bindChange">
              <picker-view-column>
                <block wx:for="{{$districtSelet$multiArray[0]}}" wx:key="index">
                  <view class="picker-view-item">{{item}}</view>
                </block>
              </picker-view-column>
              <picker-view-column>
                <block wx:for="{{$districtSelet$multiArray[1]}}" wx:key="index">
                  <view class="picker-view-item">{{item}}</view>
                </block>
              </picker-view-column>
              <picker-view-column>
                <block wx:for="{{$districtSelet$multiArray[2]}}" wx:key="index" wx:if="{{$districtSelet$disabled}}">
                  <view class="picker-view-item">{{item}}</view>
                </block>
              </picker-view-column>
            </picker-view>
          </view>
        </view>
      </view>
    </view>
  </view>

