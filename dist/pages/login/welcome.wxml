<script>
import wepy from 'wepy'
export default class actionSheet extends wepy.component {
  props = {
    isScaleModal: Boolean,
    height: {
      type: Number,
      default: 280
    },
    text: String,
    okText: {
      type: String,
      default: '联系客服'
    },
    title: {
      type: String,
      default: ''
    }
  }
  data = {
    isShow: false,
  }
  methods = {
    handleClose() {
      this.isShow = false
      this.$apply()
      this.$emit('handleClose')
    }
  }
  watch = {
    isScaleModal(val) {
      if (!val) {
        this.isShow = true
      }
      else {
        this.isShow = false
      }
      this.$apply()
    }
  }
}
