
  <view class="login_page welcome-page page_bottom">
    <view class="login-view welcome-view">
      <view class="login-title">
        <view>Hi,</view>
        <view class="login-title-col">欢迎使用人事达视频招聘会</view>
      </view>
       <image src="../../images/bg.png" mode="aspectFill" class="login-view-bg welcome-view-bg"/>
      <view class="welcome-view-box">
          <view class="welcome-view-form login-view-form">
          <view class="weui-cell_btn weui-flex center wrap">
            <button lang="zh_CN" class="weui-btn_cell weui-btn_primary" bindgetuserinfo="getUserInfo" data-id="1" open-type="getUserInfo"  wx:if="{{!authorize}}">微信账号快捷登录</button>
            <button class="weui-btn_cell weui-flex center weui-btn_cell-gradient" bindgetphonenumber="bindgetphonenumber" open-type="getPhoneNumber"  wx:else>
              获取微信手机号
            </button>
            <button lang="zh_CN" class="other-login other-login1" bindgetuserinfo="getUserInfo" data-id="2" open-type="getUserInfo">输入手机号码登录/注册</button>
          </view>
        </view>
      </view>
    </view>
    
  <view hidden="{{$modal$isScaleModal}}">
    <view bindtap="$modal$handleOk"  wx:if="{{$modal$isShow}}" class="modal_mask"/>
    <view class="modal_box transition3s {{ $modal$isShow ? 'g_scale1': ''}}" id="modal-box" style="height:{{$modal$height}}rpx">
      <view class="modal-content">
        <view class="modal-title page__title">{{$modal$modalObj.title}}</view>
        <view class="modal-textarea weui-flex center">
            <textarea data-name="content" placeholder-class="placeholder" disable-default-padding="true" class="weui-input weui-textarea modal-col page__desc" bindinput="$modal$changeInput" placeholder="{{$modal$modalObj.subTitle}}" maxlength="-1" value="{{$modal$content}}"/>
         </view>
         <view class="weui-cell_btn weui-flex around">
          <view class="text page__desc" bindtap="$modal$handleClose">取消</view>
          <view class="text page__text__active" bindtap="$modal$handleOk">确定</view>
        </view>
      </view>
    </view>
  </view>

    
  <view hidden="{{$actionLoginSheet$isScaleModal}}">
    <view bindtap="$actionLoginSheet$handleClose"  wx:if="{{$actionLoginSheet$isShow}}" class="modal_mask"/>
    <view class="modal_transform g_transition3s {{ $actionLoginSheet$isShow ? 'g_scale1': ''}}" id="modal-box" style="height:{{$actionLoginSheet$height}}rpx">
      <view class="modal-page_card">
        <image mode="scaleToFill" src="../../images/close.png"  wx:if="{{$actionLoginSheet$isShow}}" class="close-icon" bindtap="$actionLoginSheet$handleClose"/>
        <view wx:if="{{!$actionLoginSheet$title}}" class="modal-content">
          <view class="modal_text weui-flex center">{{$actionLoginSheet$text}}</view>
          <view class="weui-flex around modal-btn">
            <text class="weui-flex__item weui-flex center" bindtap="$actionLoginSheet$handleClose">取消</text>
            <text class="active weui-flex__item weui-flex center" bindtap="$actionLoginSheet$handleOk">{{$actionLoginSheet$okText}}</text>
          </view>
        </view>
        <view wx:else class="select-user">
          <view class="modal_title weui-flex center">{{$actionLoginSheet$title}}</view>
          <view class="modal_text weui-flex center">{{$actionLoginSheet$text}}</view>
          <view class="weui-flex center modal-btn wrap">
            <view class="col weui-flex center" bindtap="$actionLoginSheet$selectUser" data-wpyselectuser-a="1">我是企业招聘者</view>
            <view class="col weui-flex center" bindtap="$actionLoginSheet$selectUser" data-wpyselectuser-a="2">我是求职者</view>
          </view>
        </view>
      </view>
    </view>
  </view>

  </view>