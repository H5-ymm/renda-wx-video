
	<view class="detail-view home-view">
		<view class="home-view-header"/>
		<view class="header-box-team">
			
  <view class="weui-flex between search-box weui-cell weui-flex start page_card">
		<view class="weui-cell weui-flex start weui-flex__item">
			<image src="../../../images/search.png" class="searchIcon"/>
			<input class="weui-input weui-flex__item search-input" bindinput="$search$inputBind" confirm-type="search" bindfocus="$search$inputFocus" value="{{$search$name}}" placeholder="搜索词"/>
    </view>
		<text>搜索</text>
	</view>

		</view>
		<view class="page_margin view-team">
			<scroll-view scroll-y="true" bindscrolltolower="searchScrollLower" style="height: 100%;">
				
  <view>
    <block wx:for="{{$depList$list}}" wx:for-index="$depList$index" wx:for-item="$depList$item" wx:key="$depList$index">
      <view class="page_card"  wx:if="{{$depList$list.length}}" bindtap="$depList$viewDetail" data-wpyviewdetail-a="{{$depList$item}}">
        <view class="page_card_row weui-flex between">
          <view class="weui-flex__item">
            <view class="weui-flex between">
              <view class="page_card_name">{{$depList$item.depart_name}}</view>
              <view class="page_card_status-item weui-flex between">
                <button class="weui-btn_cell weui-flex__item weui-btn_primary" catchtap="$depList$settingUser" data-wpysettinguser-a="{{$depList$item}}">
                  人员调整
                </button>
                <button class="weui-btn_cell weui-flex__item weui-btn_primary_plain" catchtap="$depList$delDepartment" data-wpydeldepartment-a="{{$depList$item}}">
                  删除部门
                </button>
              </view>
            </view>
            <view class="weui-flex between">
              <view class="text-line weui-flex start">
                部门人数：{{$depList$item.num}}
              </view>
            </view>
            <view class="weui-flex between">
              <view class="page_card_col1 text-line">部门经理：{{$depList$item.user_name}}</view>
              <view class="page_card_time">联系电话：{{$depList$item.mobile}}</view>
            </view>
          </view>
          <!-- <image mode="scaleToFill" src="https://a.rsd123.com/image/images/right.png" class="page_down_icon"/> -->
        </view>
      </view>
    </block>
    <view  wx:if="{{!$depList$list.length}}" class="page_list">
      <image src="https://a.rsd123.com/image/images/noBg.png" class="page_noData" mode="scaleToFill"/>
      <view class="page_noData_text">暂无数据！</view>
    </view>
  </view>

			</scroll-view>
		</view>
		<view class="weui-flex between only-btn">
			<view class="weui-flex center weui-flex__item only-btn-item">
				<button class="weui-btn_cell  weui-flex__item weui-btn_primary" bindtap="addDep">
					添加部门
				</button>
			</view>
		</view>
	</view>
	
  <view hidden="{{$formModal$isScaleModal}}">
    <view bindtap="$formModal$ handleClose"  wx:if="{{$formModal$isShow}}" class="modal_mask"/>
    <view class="modal_box modal-select_box transition3s {{ $formModal$isShow ? 'g_scale1': ''}}" style="height:{{$formModal$height}}rpx">
      <view class="modal-content">
				<view class="modal-title">添加部门</view>
        <view class="modal-view-box">
					<view class="modal-row">
					  <text>部门名称</text>
						<view class="modal-col modal-col-input">
							<input class="weui-input" placeholder-class="placeholder" data-name="depart_name" value="{{$formModal$form.depart_name}}" bindinput="$formModal$changeInput" placeholder="请输入部门名称"/>
						</view>
					</view>
					<view class="modal-row">
					  <text>部门经理</text>	
						<view class="modal-col">
							<picker bindchange="$formModal$bindPickerChange" data-name="user_id" value="{{$formModal$depIndex}}" range-key="user_name" range="{{$formModal$userList}}">
								<view class="my-text-right weui-flex between">
									<view class="{{$formModal$form.user_id!=''?'':'placeholder'}}">
										{{$formModal$form.user_id!=''?$formModal$userList[$formModal$depIndex].user_name:'请选择部门经理'}}
									</view>
									<image mode="scaleToFill" src="https://a.rsd123.com/image/images/down.png" class="page_down_icon"/>
								</view>
					  	</picker>
						</view>
					</view>
		    </view>
        <view class="weui-cell_btn weui-flex between">
					 <button class="weui-btn_cell weui-btn_cell-gradient" bindtap="$formModal$handleOk">确定</button>
        </view>
      </view>
      <image src="https://a.rsd123.com/image/images/close.png" bindtap="$formModal$handleClose" class="close-icon"/>
    </view>
  </view>

