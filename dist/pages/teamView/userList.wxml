
	<view class="detail-view home-view">
		<view class="home-view-header"/>
		<view class="header-box-team">
			
  <view class="weui-flex between search-box weui-cell weui-flex start page_card">
		<view class="weui-cell weui-flex start weui-flex__item">
			<image src="../../images/search.png" class="searchIcon"/>
			<input class="weui-input weui-flex__item search-input" bindinput="$search$inputBind" confirm-type="search" bindfocus="$search$inputFocus" value="{{$search$name}}" placeholder="搜索词"/>
    </view>
		<text>搜索</text>
	</view>

		</view>
		<view class="page_margin view-team">
			<scroll-view scroll-y="true" bindscrolltolower="searchScrollLower" style="height: 100%;">
				
	<view>
		<view  wx:if="{{$teamUser$list.length}}">
			<block wx:for="{{$teamUser$list}}" wx:for-index="$teamUser$index" wx:for-item="$teamUser$item" wx:key="$teamUser$index">
				<view class="page_card" bindtap="$teamUser$viewDetail" data-wpyviewdetail-a="{{$teamUser$item}}">
					<view class="page_card_row weui-flex between">
						<view class="weui-flex__item">
							<view class="weui-flex between">
								<view class="page_card_name">{{$teamUser$item.user_name||$teamUser$userName}}</view>
								<view class="page_card_col1">{{$teamUser$item.grade_name||'-'}}</view>
							</view>
							<view class="weui-flex between">
								<view class="text-line weui-flex start">{{$teamUser$item.mobile}}</view>
								<view class="page_card_col1">{{$teamUser$item.depart_name||'-'}}</view>
							</view>
						</view>
						<image mode="scaleToFill" class="page_down_icon" src="https://a.rsd123.com/image/images/right.png"/>
					</view>
				</view>
			</block>
		</view>
		<view  wx:else class="page_list">
			<image src="https://a.rsd123.com/image/images/noBg.png" class="page_noData" mode="scaleToFill"/>
			<view class="page_noData_text">暂无数据！</view>
		</view>
	</view>

			</scroll-view>
		</view>
		<view class="weui-flex between only-btn"  wx:if="{{rendaUserTeamType==1||rendaUserTeamType==2}}">
			<view class="weui-flex center weui-flex__item only-btn-item" bindtap="addUser">
				<button class="weui-btn_cell  weui-flex__item weui-btn_primary">
					添加成员
				</button>
			</view>
		</view>
	<!-- </view> -->
	
  <view hidden="{{$modalAddUser$isScaleModal}}">
    <view bindtap="$modalAddUser$ handleClose"  wx:if="{{$modalAddUser$isShow}}" class="modal_mask"/>
    <view class="modal_box transition3s {{ $modalAddUser$isShow ? 'g_scale1': ''}}" id="modal-box" style="height:{{$modalAddUser$height}}rpx">
      <view class="modal-content"  wx:if="{{!$modalAddUser$type}}">
        <view class="home-view-box weui-flex between wrap">
          <view class="modal-title">{{$modalAddUser$title}}</view>
          <block wx:for="{{$modalAddUser$menus}}" wx:key="index">
            <view class="card-item weui-flex between wrap" bindtap="$modalAddUser$selectType" data-wpyselecttype-a="{{index}}">
              <image src="{{item.icon}}" alt="" mode="aspectFill" class="menu-icon"/>
              <view class="card-item-title">{{item.title}}</view>
              <image src="https://a.rsd123.com/image/images/user/radio2.png" alt="" mode="aspectFill" wx:if="{{index==$modalAddUser$activeIndex}}" class="radio-icon"/>
              <image src="https://a.rsd123.com/image/images/user/radio1.png" wx:else alt="" mode="aspectFill" class="radio-icon"/>
            </view>
          </block>
        </view>
        <view class="weui-cell_btn weui-flex center user-btn">
          <button class="weui-btn_cell weui-btn_cell-gradient" bindtap="$modalAddUser$handleOk">确定</button>
        </view>
      </view>
      <view wx:else class="modal-content modal-content-qrcode">
        <image src="{{$modalAddUser$imgUrl}}" bindlongpress="$modalAddUser$saveImg" class="qrcode-img"/>
        <view class="weui-cell_btn weui-flex center user-btn">
          <button open-type="share" class="weui-btn_cell weui-btn_cell-gradient" bindtap="$modalAddUser$handleOk">长按保存二维码并分享</button>
        </view>
      </view>
      <image src="https://a.rsd123.com/image/images/close.png" bindtap="$modalAddUser$handleClose" class="close-icon"/>
    </view>
  </view>

	</view>