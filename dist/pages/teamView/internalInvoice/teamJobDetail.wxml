
	<view class="detail-view">
		<wxs src="../../../filterWxs/rewaryFilter.wxs" module="wxs"/>
<wxs src="../../../filterWxs/dateFilter.wxs" module="wxsD"/>

	<view class="home-view-box page_margin view-detail">
		<view class="page_card">
			<view class="page_card_row">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">职位名称</view>
					<view class="my-text-right">{{$jobTemplateTeam$form.name}}</view>
				</view>
			</view>
			<view class="page_card_row">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">职位类别</view>
					<view class="my-text-right">{{$jobTemplateTeam$form.job_type}}</view>
				</view>
			</view>
			<view class="page_card_row">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">招聘人数</view>
					<view class="my-text-right">{{$jobTemplateTeam$form.required_number}}人</view>
				</view>
			</view>
			<view class="page_card_row">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">所在地区</view>
					<view class="my-text-right">
						{{$jobTemplateTeam$form.provinceName}}{{$jobTemplateTeam$form.cityName}}
						{{$jobTemplateTeam$form.aresName}}{{$jobTemplateTeam$form.address||''}}
					</view>
				</view>
			</view>
		</view>
		<view class="page_card">
			<view class="page_card_row">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">年龄</view>
					<view class="my-text-right">{{$jobTemplateTeam$form.min_age}}岁-{{$jobTemplateTeam$form.max_age}}岁</view>
				</view>
			</view>
			<view class="page_card_row">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">性别</view>
					<view class="my-text-right">{{$jobTemplateTeam$form.sex==1?'男':$jobTemplateTeam$form.sex==2?'女':'男女不限'}}</view>
				</view>
			</view>
			<view class="page_card_row">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">学历</view>
					<view class="my-text-right">{{$jobTemplateTeam$form.educationName}}</view>
				</view>
			</view>
		</view>
		<view class="page_card">
			<view class="page_card_row">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">薪资类型</view>
					<view class="my-text-right">{{$jobTemplateTeam$form.money_type==1?'月薪':$jobTemplateTeam$form.money_type==2?'日薪':'时薪'}}</view>
				</view>
			</view>
			<view class="page_card_row">
				<view class="weui-flex between"  wx:if="{{$jobTemplateTeam$rendaUserTeamType==2}}">
					<view class="my-text weui-flex__item">薪资金额</view>
					<view class="my-text-right" wx:if="{{$jobTemplateTeam$form.money_type==1}}">{{$jobTemplateTeam$form.money_min}}-{{$jobTemplateTeam$form.money_max}}/人/月</view>
					<view class="my-text-right" wx:else>
						{{$jobTemplateTeam$form.money?$jobTemplateTeam$form.money:0}}
						{{$jobTemplateTeam$form.money_type==2?'/人/天':'/人/时'}}
					</view>
				</view>
				<view class="weui-flex between"  wx:else>
					<view class="my-text weui-flex__item">薪资金额</view>
					<view class="my-text-right">
						{{$jobTemplateTeam$form.money?$jobTemplateTeam$form.money:0 }}
						{{$jobTemplateTeam$form.money_type==1?'/人/月':$jobTemplateTeam$form.money_type==2?'/人/天':'/人/时'}}
					</view>
				</view>
			</view>
			<view class="page_card_row">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">职位描述</view>
				</view>
				<rich-text nodes="{{$jobTemplateTeam$form.job_content}}" class="my-text-right weui-textarea"/>
			</view>
		</view>
		<view class="page_card">
			<view class="page_card_row">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">缴纳五金</view>
					<view class="my-text-right">{{$jobTemplateTeam$form.is_five_risks==1?'是': $jobTemplateTeam$form.is_five_risks==2?'否':'试用期后'}}</view>
				</view>
			</view>
			<view class="page_card_row">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">缴纳公积金：</view>
					<view class="my-text-right">{{$jobTemplateTeam$form.is_fund==1?'是': $jobTemplateTeam$form.is_five_risks==2?'否':'试用期后'}}</view>
				</view>
			</view>
		</view>
		<view class="page_card">
			<view class="page_card_row">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">返利模式</view>
					<view class="my-text-right">
						{{$jobTemplateTeam$form.reward_type==1?'月返':$jobTemplateTeam$form.reward_type==2?'日返':$jobTemplateTeam$form.reward_type==3
						?'时返':'一次性返利'}}
					</view>
				</view>
			</view>
			<view class="page_card_row">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">返利金额</view>
					<view class="my-text-right">{{$jobTemplateTeam$form.reward_money}}{{wxs.rewardTypeText($jobTemplateTeam$form.reward_type)}}</view>
				</view>
			</view>
			<view class="page_card_row" wx:if="{{$jobTemplateTeam$form.reward_type==1}}">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">返利日期</view>
					<view class="weui-flex end">
						<view class="input-text-end">次月</view>
						<view class="my-text-right">{{$jobTemplateTeam$form.settlement_time}}号</view>
					</view>
				</view>
			</view>
			<view class="page_card_row" wx:if="{{$jobTemplateTeam$form.reward_type}}">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">结算方式</view>
					<view class="my-text-right" wx:if="{{$jobTemplateTeam$form.reward_type==1}}">{{$jobTemplateTeam$form.reward_money_type==1?'长期返利':'持续返利'}}</view>
					<view class="my-text-right weui-flex end" wx:if="{{$jobTemplateTeam$form.reward_type==2||$jobTemplateTeam$form.reward_type==3}}">
						按{{wxs.rewardText($jobTemplateTeam$form.reward_money_type)}}结算
						{{$jobTemplateTeam$form.settlement_type==1?'本':'次'}}{{wxs.rewardText($jobTemplateTeam$form.reward_money_type)}}
						<view wx:if="{{$jobTemplateTeam$form.reward_money_type!=1}}">{{$jobTemplateTeam$form.settlement_time}}{{wxs.rewardText($jobTemplateTeam$form.reward_money_type)}}</view>
					</view>
				</view>
			</view>
			<view class="page_card_row" wx:if="{{($jobTemplateTeam$form.reward_type==1&&$jobTemplateTeam$form.reward_money_type==2)||($jobTemplateTeam$form.reward_type==2||$jobTemplateTeam$form.reward_type==3)}}">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">持续时长</view>
					<view class="my-text-right" wx:if="{{$jobTemplateTeam$form.duration_time}}">
						{{$jobTemplateTeam$form.duration_time}}
						{{wxs.rewardTimeText($jobTemplateTeam$form.reward_money_type)}}
					</view>
					<view class="my-text-right" wx:else>1天</view>
				</view>
			</view>
			<view class="page_card_row" wx:if="{{$jobTemplateTeam$form.reward_type>1}}">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">需入职</view>
					<view class="my-text-right" wx:if="{{$jobTemplateTeam$form.reward_needtime}}">
						{{$jobTemplateTeam$form.reward_needtime}}
						<text wx:if="{{$jobTemplateTeam$form.reward_money_type<4}}">{{wxs.rewardTimeText($jobTemplateTeam$form.reward_money_type)}}</text>
						<text wx:else>天</text>
					</view>
					<view class="my-text-right" wx:else>1天</view>
				</view>
			</view>
		</view>
		<view class="page_card">
			<view class="page_card_row" wx:if="{{$jobTemplateTeam$userType!=2}}">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">联系人</view>
					<view class="my-text-right">{{$jobTemplateTeam$form.link_name}}</view>
				</view>
			</view>
			<view class="page_card_row">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">联系人电话</view>
					<view class="my-text-right" wx:if="{{$jobTemplateTeam$userType==2}}">{{wxsD.getPhoneNum($jobTemplateTeam$form.tel)}}</view>
					<view class="my-text-right" wx:else>{{$jobTemplateTeam$form.tel}}</view>
				</view>
			</view>
		</view>
		<view class="page_card" wx:if="{{$jobTemplateTeam$userType!=2}}">
			<view class="page_card_row">
				<view class="weui-flex between">
					<view class="my-text weui-flex__item">邮箱</view>
					<view class="my-text-right">{{$jobTemplateTeam$form.email?$jobTemplateTeam$form.email:'-'}}</view>
				</view>
			</view>
		</view>
	</view>

		<view class="weui-cell_btn weui-flex between register-btn">
			<button class="weui-btn_cell weui-btn_primary"  wx:if="{{receiptType<0}}" bindtap="recommend">推荐岗位</button>
			<button class="weui-btn_cell weui-btn_primary"  wx:if="{{!receiptType&&form.status<=1}}" bindtap="contactPhone">联系客服</button>
			<button class="weui-btn_cell weui-btn_primary" wx:if="{{!receiptType&&form.status&&form.status!=1}}" bindtap="handleDelete">删除</button>
		</view>
	</view>