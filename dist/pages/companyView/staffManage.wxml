
	<view class="detail-view">
		<view class="weui-flex between header-box staff-header-box">
			
  <view class="weui-flex around tabBar"  wx:if="{{!isSeachWidth}}">
    <block wx:for="{{$tabBar$tabBarList}}" wx:key="index">
      <view class="{{$tabBar$activeIndex==index?'tabBar_item-active':''}} weui-flex__item tabBar_item" bindtap="$tabBar$switchTab" data-wpyswitchtab-a="{{index}}">
        <view>{{item.name}}</view>
        <view wx:if="{{item.num!=-1}}">({{item.num}})</view>
      </view>
    </block>
    <view class="tab-line {{'line'+$tabBar$activeIndex}}"/>
  </view>

			
  <view class="weui-flex between search-box search-box {{isSeachWidth?'weui-flex__item':''}}">
		<view class="weui-cell weui-flex start weui-flex__item">
			<image src="../../images/search.png" class="searchIcon"/>
			<input class="weui-input weui-flex__item search-input" bindinput="$search$inputBind" confirm-type="search" bindfocus="$search$inputFocus" value="{{$search$name}}" placeholder="搜索词"/>
    </view>
		<text>搜索</text>
	</view>

		</view>
		<view class="page_margin view-list">
			<scroll-view scroll-y="true" style="height:100%" bindscrolltolower="searchScrollLower">
				<wxs src="../../filterWxs/dateFilter.wxs" module="wxs"/>

  <view>
    <block wx:for="{{$staffList$list}}" wx:for-index="$staffList$index" wx:for-item="$staffList$item" wx:key="$staffList$index">
      <view class="page_card"  wx:if="{{$staffList$list.length}}" bindtap="$staffList$viewDetail" data-wpyviewdetail-a="{{$staffList$item}}">
        <view class="page_card_row weui-flex between">
          <view class="weui-flex__item">
            <view class="weui-flex between">
              <view class="page_card_name">{{$staffList$item.name}}</view>
              <view class="page_card_receipt_status {{$staffList$item.entry_status==1?'page_card_receipt_status1':'page_card_receipt_status3'}}">{{$staffList$item.entry_status==1?'在职':'离职'}}</view>
            </view>
            <view class="weui-flex between">
              <view class="page_card_col1 text-line">{{$staffList$item.post?$staffList$item.post:'-'}}</view>
              <view class="page_card_time">{{wxs.dateFormat($staffList$item.addtime,'yyyy-MM-dd')}}</view>
            </view>
          </view>
          <image mode="scaleToFill" src="https://a.rsd123.com/image/images/right.png" class="page_down_icon"/>
        </view>
      </view>
    </block>
    <view  wx:if="{{!$staffList$list.length}}" class="page_list">
      <image src="https://a.rsd123.com/image/images/noBg.png" class="page_noData" mode="scaleToFill"/>
      <view class="page_noData_text">暂无数据！</view>
    </view>
  </view>

			</scroll-view>
		</view>
		<view class="home-add-resume" bindtap="addStaff">
			<image src="../../images/add.png" class="add-icon"/>
			<view class="home-add-text">添加员工</view>
		</view>
		
	<view class="tabBarBox weui-flex center">
		<!-- 首页 -->
		<block  wx:for="{{$tabBarBottom$tabBarList.list}}" wx:key="index">
			<navigator class="itemView  weui-flex__item" url="{{item.pagePath}}" open-type="redirect" hover-class="none">
				<image class="item_icon" src="{{item.selected ? item.selectedIconPath : item.iconPath}}"/>
				<view class="item_text {{item.selected ? 'c-y' : 'c-gray'}}">
					{{item.text}}
				</view>
			</navigator>
		</block>
	</view>

	</view>