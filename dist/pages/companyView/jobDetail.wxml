            <view class="my-text  weui-flex__item my-text-require">结算方式：</view>
						<picker wx:if="{{$updateForm$form.reward_type==1}}" bindchange="$updateForm$bindPickerChange" data-name="reward_money_type" value="{{$updateForm$rewardTypeIndex}}" range="{{$updateForm$rewardMoneyType}}">
