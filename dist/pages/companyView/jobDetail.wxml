							<view class="my-text-right weui-flex between">
								<view wx:if="{{$updateForm$form.reward_money_type!=''}}">
									{{$updateForm$rewardMoneyTypeList[0][$updateForm$moneyTypeIndex[0]]}}
									{{$updateForm$rewardMoneyTypeList[1][$updateForm$moneyTypeIndex[1]]}}
									{{$updateForm$rewardMoneyTypeList[2][$updateForm$moneyTypeIndex[2]]}}
								</view>
								<view class="placeholder" wx:else>请选择</view>
								<image mode="scaleToFill" src="https://a.rsd123.com/image/images/down.png" class="page_down_icon"/>
							</view>
						</picker>
          </view>
       </view>
			 <view class="page_card_row" wx:if="{{$updateForm$rewardTypeIndex==1||($updateForm$form.reward_type==2||$updateForm$form.reward_type==3)}}">
