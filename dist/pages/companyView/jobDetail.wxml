          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">返利模式：</view>
						<picker bindchange="$updateForm$bindPickerChange" data-name="reward_type" value="{{$updateForm$rewardIndex}}" range-key="label" range="{{$updateForm$rewardTypeList}}">
							<view class="my-text-right weui-flex between">
								<view class="{{$updateForm$form.reward_type!=''?'':'placeholder'}}">
									{{$updateForm$form.reward_type!=''?$updateForm$rewardTypeList[$updateForm$rewardIndex].label:'请选择'}}
								</view>
								<image mode="scaleToFill" src="https://a.rsd123.com/image/images/down.png" class="page_down_icon"/>
							</view>
						</picker>
          </view>
        </view>
				<view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text weui-flex__item my-text-require">返利金额：</view>
						 <input class="weui-input" data-name="reward_money" placeholder-class="placeholder" placeholder="请输入返利金额" value="{{$updateForm$form.reward_money}}" bindinput="$updateForm$changeInput"/>
						<view class="input-text-end"  wx:if="{{$updateForm$form.reward_type!=''}}">
							{{wxs.rewardTypeText($updateForm$form.reward_type)}}
