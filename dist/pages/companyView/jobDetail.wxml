            <view class="my-text weui-flex__item">持续时长：</view>
						<view class="weui-flex end">
							 <input class="weui-input" placeholder-class="placeholder" placeholder="请输入持续时长" value="{{$updateForm$form.duration_time}}" bindinput="$updateForm$changeInput" data-name="duration_time"/>
