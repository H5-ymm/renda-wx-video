        </view>
				<view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">联系人电话：</view>
            <input class="weui-input" data-name="tel" placeholder-class="placeholder" value="{{$updateForm$form.tel}}" bindinput="$updateForm$changeInput" placeholder="请输入联系人电话"/>
