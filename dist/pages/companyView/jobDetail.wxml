            <view class="my-text  weui-flex__item">邮箱：</view>
            <input class="weui-input" data-name="email" placeholder-class="placeholder" value="{{$updateForm$form.email}}" bindinput="$updateForm$changeInput" placeholder="请输入邮箱"/>
