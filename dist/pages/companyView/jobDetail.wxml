        </view>
        <view class="page_card_row"  wx:if="{{$updateForm$form.reward_type==1}}">
          <view class="weui-flex between">
            <view class="my-text weui-flex__item my-text-require">返利日期：</view>
						<view class="weui-flex end">
							 <view class="input-text-end">次月</view>
							 <input class="weui-input settlement_time_input" data-name="settlement_time" value="{{$updateForm$form.settlement_time}}" placeholder="请输入" placeholder-class="placeholder" bindinput="$updateForm$changeInput"/>
							 <view class="input-text-end">号</view>
