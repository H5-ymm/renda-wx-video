
  <view class="home-view register-view page_margin">
    <view class="home-view-box">
      <view class="page_card">
        <view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">职位名称：</view>
            <input class="weui-input" placeholder-class="placeholder" data-name="name" value="{{form.name}}" bindinput="changeInput" placeholder="请输入职位名称"/>
          </view>
        </view>
				 <view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">职位类别：
						</view>
						<picker bindchange="bindPickerChange" data-name="job_type" value="{{jobIndex}}" range="{{job_array}}">
							<view class="my-text-right weui-flex between">
								<view class="{{form.job_type?'':'placeholder'}}">
									{{form.job_type?job_array[jobIndex]:'请选择职位类别'}}
								</view>
								<image mode="scaleToFill" src="https://a.rsd123.com/image/images/down.png" class="page_down_icon"/>
							</view>
						</picker>
          </view>
        </view>
        <view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">招聘人数：</view>
            <input class="weui-input" data-name="required_number" type="number" placeholder-class="placeholder" value="{{form.required_number}}" bindinput="changeInput" placeholder="请输入招聘人数"/>
						<view>人</view>
          </view>
        </view>
        <view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">所在地区：</view>
            
  <picker mode="multiSelector" bindcancel="$districtSelet$cancelPickerChange" bindchange="$districtSelet$bindMultiPickerChange" bindcolumnchange="$districtSelet$bindMultiPickerColumnChange" value="{{$districtSelet$multiIndex}}" range="{{$districtSelet$multiArray}}">
    <view class="my-text-right weui-flex between">
      <view  wx:if="{{$districtSelet$options.length}}">
          {{$districtSelet$multiArray[0][$districtSelet$multiIndex[0]]}}
          {{$districtSelet$multiArray[1][$districtSelet$multiIndex[1]]}}
          {{$districtSelet$disabled?$districtSelet$multiArray[2][$districtSelet$multiIndex[2]]:''}}
       </view>
      <view  wx:else class="placeholder">请选择地址</view>
      <image mode="scaleToFill" src="https://a.rsd123.com/image/images/down.png" class="page_down_icon"/>
    </view>
  </picker>

          </view>
        </view>
				<view class="page_card_row">
					<view class="weui-flex end">
						<input class="weui-input" placeholder-class="placeholder" data-name="address" value="{{form.address}}" bindinput="changeInput" placeholder="请输入详细地址"/>
					</view>
	      </view>
      </view>
			<view class="page_card">
				<view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">年龄：</view>
						<picker mode="multiSelector" data-name="ageIndex" value="{{ageIndex}}" bindcancel="cancelPickerChange" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" range="{{ageArray}}">
							<view class="my-text-right weui-flex between">
								<view  wx:if="{{form.min_age!=''}}">
									{{ageArray[0][ageIndex[0]]}}岁 -
									{{ageArray[1][ageIndex[1]]}}岁
								</view>
								<view class="placeholder"  wx:else>请选择</view>
								<image mode="scaleToFill" src="https://a.rsd123.com/image/images/down.png" class="page_down_icon"/>
							</view>
						</picker>
          </view>
        </view>
				<view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text weui-flex__item my-text-require">性别：</view>
            <picker bindchange="bindPickerChange" value="{{index}}" data-name="sex" range="{{array}}">
              <view class="my-text-right weui-flex between">
                <view class="{{array[index]?'':'placeholder'}}">
									{{array[index]?array[index]:'请选择性别'}}
								</view>
                <image mode="scaleToFill" src="https://a.rsd123.com/image/images/down.png" class="page_down_icon"/>
              </view>
            </picker>
          </view>
        </view>
        <view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text weui-flex__item my-text-require">学历：</view>
            <picker bindchange="bindPickerChange" data-name="education" value="{{eduIndex}}" range="{{edu_type}}">
              <view class="my-text-right weui-flex between">
                <view class="{{form.education?'':'placeholder'}}"> 
                  {{form.education?edu_type[eduIndex]:'请选择'}}</view>
                <image mode="scaleToFill" src="https://a.rsd123.com/image/images/down.png" class="page_down_icon"/>
              </view>
            </picker>
          </view>
        </view>
      </view>
			<view class="page_card">
				<view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text  weui-flex__item my-text-require">薪资类型：</view>
						<picker bindchange="bindPickerChange" data-name="money_type" value="{{moneyTypeIndex}}" range="{{moneyTypeList}}" range-key="label">
							<view class="my-text-right weui-flex between">
								<view class="{{form.money_type!=''?'':'placeholder'}}">
									{{form.money_type!=''?
									moneyTypeList[moneyTypeIndex].label:'请选择薪资类型'}}
								</view>
								<image mode="scaleToFill" src="https://a.rsd123.com/image/images/down.png" class="page_down_icon"/>
							</view>
						</picker>
          </view>
        </view>
				<view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text weui-flex__item my-text-require">薪资金额：</view>
            <picker bindchange="bindPickerChange" value="{{moneyIndex}}" wx:if="{{!form.money_type || form.money_type==1}}" data-name="money" range="{{money_array}}">
              <view class="my-text-right weui-flex between">
                <view class="{{form.money!=''?'':'placeholder'}}">
									{{form.money!=''?money_array[moneyIndex]:'请选择薪资金额'}}
								</view>
                <image mode="scaleToFill" src="https://a.rsd123.com/image/images/down.png" class="page_down_icon"/>
              </view>
            </picker>
						<input class="weui-input" wx:if="{{form.money_type>1}}" placeholder-class="placeholder" data-name="money" value="{{form.money}}" bindinput="changeInput" placeholder="请输入金额"/>
						<view wx:if="{{form.money_type>1}}" class="input-text-end">元/人/{{form.money_type==2?'日':'时'}}</view>
          </view>
        </view>
        <view class="page_card_row">
          <view class="weui-flex between">
            <view class="my-text weui-flex__item my-text-require">职位描述：</view>
          </view>
          <textarea data-name="job_content" placeholder-class="placeholder" disable-default-padding="true" class="weui-input weui-textarea" value="{{form.job_content}}" bindinput="changeInput" placeholder="请具体描述工作内容，职位要求等信息；至少输入30个字" maxlength="1000"/>
        </view>
      </view>
    </view>
    <view class="weui-cell_btn weui-flex center register-btn">
      <button class="weui-btn_cell weui-btn_primary" bindtap="save">
				下一步
			</button>
    </view>
  </view>