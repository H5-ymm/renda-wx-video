
  <scroll-view scroll-y="true" style="height:100%">
    
	<view class="scroll-view">
	  <block  wx:if="{{$jobList$list.length}}" wx:for="{{$jobList$list}}" wx:for-index="$jobList$index" wx:for-item="$jobList$item" wx:key="$jobList$index">
      <view bindtap="$jobList$deliverResume" data-wpydeliverresume-a="{{$jobList$item}}">
				
  <view class="list-row">
    <view class="weui-flex between list-col-1">    
      <text class="page__title text-line">{{$jobList$item.job_name}}</text>
      <view class="number">{{$jobList$item.salary}}</view>
    </view>
    <view class="page__desc">{{$jobList$item.number}}人 | {{$jobList$item.edu}} | {{$jobList$item.province}}{{$jobList$item.city}}{{$jobList$item.area}}</view>
    <view class="weui-flex start text-line">
      <view class="weui-flex start weui-flex__item"><view class="card-item weui-flex center">{{$jobList$item.social_security}}</view></view>
      <button class="weui-btn_cell weui-btn_primary"  wx:if="{{$jobList$jobItem$isShowBtn&&$jobList$item.is_apply!=1}}" catchtap="$jobList$jobItem$deliverResume" data-com-index="{{$jobList$index}}" data-wpydeliverresume-a="{{$jobList$item}}">
        投递简历
      </button>
      <view class="number"  wx:if="{{$jobList$jobItem$isShowBtn&&$jobList$item.is_apply==1}}">已投递</view>
    </view>
  </view>

			</view>
    </block>
		<view wx:if="{{!$jobList$list.length}}" class="page_list">
			<image src="http://www.ttxsg.com.cn:39009/uploads/images/noData.png" class="page_noData" mode="scaleToFill"/>
			<view class="page_noData_text">暂无数据！</view>
		</view>
	</view>

  </scroll-view>