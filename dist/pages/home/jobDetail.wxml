
  <view class="page view_hidden">
    <scroll-view scroll-y="true" bindscrolltolower="searchScrollLower" class="view_auto view-content">
      <view class="detail-box page_top">
        
  <view class="list-row">
    <view class="weui-flex between list-col-1">    
      <text class="page__title text-line">{{$jobDetailItem$item.job_name}}</text>
      <view class="number">{{$jobDetailItem$item.salary}}</view>
    </view>
    <view class="page__desc">{{$jobDetailItem$item.number}}人 | {{$jobDetailItem$item.edu}} | {{$jobDetailItem$item.province}}{{$jobDetailItem$item.city}}{{$jobDetailItem$item.area}}</view>
    <view class="weui-flex start text-line">
      <view class="weui-flex start weui-flex__item"><view class="card-item weui-flex center">{{$jobDetailItem$item.social_security}}</view></view>
      <button class="weui-btn_cell weui-btn_primary"  wx:if="{{$jobDetailItem$isShowBtn&&$jobDetailItem$item.is_apply!=1}}" catchtap="$jobDetailItem$deliverResume" data-wpydeliverresume-a="{{$jobDetailItem$item}}">
        投递简历
      </button>
      <view class="number"  wx:if="{{$jobDetailItem$isShowBtn&&$jobDetailItem$item.is_apply==1}}">已投递</view>
    </view>
  </view>

        <view class="address-box section-box">
          <view class="page__title">职位性质</view>
          <view class="page__desc address-detail">{{jobDetailInfo.nature}}</view>
        </view>
        <view class="section-box">
          <view class="page__title">职位要求</view>
          <view class="page__desc">
            岗位职责： 
            {{jobDetailInfo.job_requirements}}
          </view>
        </view>
        <view class="section-box">
          <view class="page__title">职位描述</view>
          <view class="page__desc">
           {{jobDetailInfo.content}}
          </view>
        </view>
        <view class="section-box">
          <view class="weui-flex between" bindtap="viewCompany">
            <view class="weui-flex between">
              <image src="{{companyDetail.logo_url}}"  wx:if="{{companyDetail.logo_url}}" class="card-header shadow" mode="scaleToFill"/>
              <image src="../../images/company.png"  wx:else class="card-header shadow" mode="scaleToFill"/>
              <view class="com_info">
                <view class="page__title">{{companyDetail.com_name}}</view>
                <view class="page__desc">{{companyDetail.nature}} · {{companyDetail.scale}} · {{companyDetail.trades}}</view>
              </view>
            </view>
            <image mode="scaleToFill" class="page_card_icon" src="http://www.ttxsg.com.cn:39009/uploads/images/right.png"/>
          </view>
        </view>
      </view>
    </scroll-view>
    <view class="footer-box">
      <view class="weui-flex between">
        <view class="weui-flex between">
          <image mode="scaleToFill" class="big_icon" src="http://www.ttxsg.com.cn:39009/uploads/images/company/collect-active.png" wx:if="{{jobDetailInfo && jobDetailInfo.is_collect}}" bindtap="JobCollect" data-wpyjobcollect-a="2"/>
          <image mode="scaleToFill" class="big_icon" src="http://www.ttxsg.com.cn:39009/uploads/images/collect.png" wx:else bindtap="JobCollect" data-wpyjobcollect-a="1"/>
          <button open-type="share" class="share-btn">
            <image mode="scaleToFill" class="big_icon" src="http://www.ttxsg.com.cn:39009/uploads/images/company/share.png"/>
          </button>
        </view>
        <view>
          <button class="weui-btn_cell weui-btn_primary" wx:if="{{jobDetailInfo.is_apply!=1}}" bindtap="deliverResume">
            投递简历
          </button>
          <view class="page__text__active" wx:if="{{jobDetailInfo.is_apply==1}}">已投递</view>
        </view>
      </view>
    </view>
  </view>