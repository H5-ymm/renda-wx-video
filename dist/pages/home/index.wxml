
  <view class="page-home">
    
  <view class="weui-flex between search-box">
		<view class="weui-cell weui-flex start weui-flex__item">
			<image src="../../images/search.png" class="searchIcon"/>
			<input class="weui-input weui-flex__item search-input" bindinput="$search$inputBind" confirm-type="search" bindfocus="$search$inputFocus" value="{{$search$name}}" placeholder="搜索词"/>
    </view>
		<text>搜索</text>
	</view>

    <scroll-view scroll-y="true" bindscrolltolower="searchScrollLower" class="view-content">
      
  <view class="page-section page-section-spacing swiper">
    <swiper indicator-dots="true" indicator-color="#B5B5B6" indicator-active-color="#1890FF" autoplay="true" class="swiper">
      <block  wx:for="{{$banner$banner}}" wx:key="index">
        <swiper-item class="swiper-item">
            <image src="{{item.image}}" alt="" class="swiper-image shadow" mode="aspectFill"/>
        </swiper-item>
      </block>
    </swiper>
  </view>

      <view class="section">
        <view class="job-box">
          <view class="job-title weui-flex start">
            视频招聘会(10)
          </view>
          <view class="job-search">
            <view class="job-search-query weui-flex start">
              <view class="weui-flex around job-search-item">
                <block  wx:for="{{statusList}}" wx:key="index">
                  <view class="card-item weui-flex center  {{index == activeIndex ? 'active': ''}}" bindtap="showModal" data-wpyshowmodal-a="{{index}}">{{item}}</view>
                </block>
              </view>
            </view>
          </view>
          
	<view>
	  <block  wx:for="{{$jobFairList$list}}" wx:key="index" wx:if="{{$jobFairList$list.length}}">
      
  <view class="list-card shadow" bindtap="$jobFairList$jobFairItem$routerHall" data-com-index="{{$jobFairList$undefined}}" data-wpyrouterhall-a="{{$jobFairList$item}}">
    <view class="weui-flex start card-col-1">    
      <button class="weui-btn_cell weui-btn_primary {{$jobFairList$item.status==1 ? '' : 'weui-btn_warn'}}"  wx:if="{{$jobFairList$jobFairItem$isShowBtn}}">
        {{$jobFairList$item.money==1?'进行中':'待举办'}}
      </button>
      <text class="name {{$jobFairList$jobFairItem$isShowBtn?'text-line':''}}"> {{$jobFairList$item.name}}得到极大的打击打击打击打击打击打击打击急急急</text>
    </view>
    <view class="card-col-2">    
      <view>时间：2020-03-21 11:00 至 2020-03-21 11:00</view>
      <view>动态：<text>企业10家 | 岗位10家 | 求职者10人</text></view>
      <view>规模：100家企业</view>
    </view>
    <view class="card-col-3">
      <button class="weui-btn_cell weui-btn_primary {{$jobFairList$jobFairItem$isShowBtn?'':'weui-btn_primary_plain'}}">
        {{$jobFairList$jobFairItem$isShowBtn?'进入会场':'详情'}}
      </button>
    </view>
  </view>

    </block>
		<view  wx:if="{{!$jobFairList$list.length}}" class="page_list">
			<image src="https://a.rsd123.com/image/images/noBg.png" class="page_noData" mode="scaleToFill"/>
			<view class="page_noData_text">暂无数据！</view>
		</view>
	</view>

        </view>
      </view>
    </scroll-view>
    
  <view hidden="{{$actionSheet$isScaleModal}}">
    <view bindtap="$actionSheet$handleClose"  wx:if="{{$actionSheet$isShow}}" class="modal_mask"/>
    <view class="modal_transform g_transition3s {{ $actionSheet$isShow ? 'g_scale1': ''}}" id="modal-box" style="height:{{$actionSheet$height}}rpx">
      <view class="modal-page_card">
        <image mode="scaleToFill" src="../../images/close.png" class="close-icon" bindtap="$actionSheet$handleClose"/>
        <view class="modal_text weui-flex center">{{$actionSheet$text}}</view>
        <view class="weui-flex around modal-btn">
          <text class="weui-flex__item weui-flex center">取消</text>
          <text class="active weui-flex__item weui-flex center">联系客服</text>
        </view>
      </view>
    </view>
  </view>

  </view>