
  <view class="page-home">
    
  <view class="weui-flex between search-box">
		<view class="weui-cell weui-flex start weui-flex__item">
			<image src="../../images/search.png" class="searchIcon"/>
			<input class="weui-input weui-flex__item search-input" bindinput="$search$inputBind" confirm-type="search" bindfocus="$search$inputFocus" value="{{$search$name}}" placeholder="{{$search$placeholder}}"/>
    </view>
		<text>搜索</text>
	</view>

    <scroll-view scroll-y="true" bindscrolltolower="searchScrollLower" class="view-content">
      
  <view class="page-section page-section-spacing swiper">
    <swiper indicator-dots="true" indicator-color="#B5B5B6"  wx:if="{{$banner$banner.length}}" indicator-active-color="#1890FF" autoplay="true" class="swiper">
      <block wx:for="{{$banner$banner}}" wx:key="index">
        <swiper-item class="swiper-item">
            <image src="{{item.image}}" alt="" class="swiper-image shadow" mode="aspectFill"/>
        </swiper-item>
      </block>
    </swiper>
  </view>

      <view class="section">
        <view class="job-box">
          <view class="job-title weui-flex start">
            视频招聘会({{count}})
          </view>
          <view class="job-search">
            <view class="job-search-query weui-flex start">
              <view class="weui-flex around job-search-item">
                <block  wx:for="{{statusList}}" wx:key="index">
                  <view class="card-item weui-flex center {{index == activeIndex ? 'active': ''}}" bindtap="showModal" data-wpyshowmodal-a="{{index}}">{{item}}</view>
                </block>
              </view>
            </view>
          </view>
          
	<view>
	  <block  wx:for="{{$jobFairList$newList}}" wx:key="index" wx:if="{{$jobFairList$newList.length}}">
       <view class="list-card shadow" bindtap="$jobFairList$routerHall" data-wpyrouterhall-a="{{item}}">
				<view class="weui-flex start card-col-1">    
					<button class="weui-btn_cell weui-btn_primary {{item.now_status==1?'':'weui-btn_warn'}}">
						{{item.now_status==1?'进行中':'待举办'}}
					</button>
					<text class="name {{$jobFairList$isShowBtn?'text-line':''}}">{{item.title}}</text>
				</view>
				<view class="card-col-2">    
					<view>时间：{{item.starttime}} 至 {{item.endtime}}</view>
					<view>动态：<text>企业{{item.companynum}}家 | 岗位10家 | 求职者{{item.jobnum}}人</text></view>
					<view>规模：{{item.scale||0}}家企业</view>
				</view>
				<view class="card-col-3">
				  <view class="weui-flex between">
						<button class="weui-btn_cell weui-btn_primary" wx:if="{{$jobFairList$usertype==1&&!item.applyinfo}}">
							企业定展
						</button>
						<button class="weui-btn_cell weui-btn_primary">
						 进入会场
						</button>
					</view>
				</view>
			</view>
    </block>
		<view  wx:if="{{!$jobFairList$newList.length}}" class="page_list">
			<image src="../../images/noData.png" class="page_noData" mode="scaleToFill"/>
			<view class="page_noData_text">暂无数据！</view>
		</view>
	</view>

        </view>
      </view>
    </scroll-view>
    
  <view hidden="{{$actionSheet$isScaleModal}}">
    <view bindtap="$actionSheet$handleClose"  wx:if="{{$actionSheet$isShow}}" class="modal_mask"/>
    <view class="modal_transform g_transition3s {{ $actionSheet$isShow ? 'g_scale1': ''}}" id="modal-box" style="height:{{$actionSheet$height}}rpx">
      <view class="modal-page_card">
        <image mode="scaleToFill" src="../../images/close.png" class="close-icon" bindtap="$actionSheet$handleClose"/>
        <view  wx:if="{{!$actionSheet$title}}" class="modal-content">
          <view class="modal_text weui-flex center">{{$actionSheet$text}}</view>
          <view class="weui-flex around modal-btn">
            <text class="weui-flex__item weui-flex center">取消</text>
            <text class="active weui-flex__item weui-flex center" bindtap="$actionSheet$handleOk">{{$actionSheet$okText}}</text>
          </view>
        </view>
        <view wx:else class="select-user">
          <view class="modal_title weui-flex center">{{$actionSheet$title}}</view>
          <view class="modal_text weui-flex center">{{$actionSheet$text}}</view>
          <view class="weui-flex center modal-btn wrap">
            <view class="col weui-flex center" bindtap="$actionSheet$selectUser" data-wpyselectuser-a="1">我是企业招聘者</view>
            <view class="col weui-flex center" bindtap="$actionSheet$selectUser" data-wpyselectuser-a="2">我是求职者</view>
          </view>
        </view>
      </view>
  </view>

<script>
import wepy from 'wepy'
export default class actionSheet extends wepy.component {
  props = {
    isScaleModal: Boolean,
    height: {
      type: Number,
      default: 280
    },
    text: String,
    okText: {
      type: String,
      default: '联系客服'
    },
    title: {
      type: String,
      default: ''
    }
  }
  data = {
    isShow: false
  }
  methods = {
    selectUser(index) {
      this.$emit('selectUser', index)
    },
    handleOk() {
      this.isShow = false
      this.$apply()
      this.$emit('handleOk')
    },
    handleClose() {
      this.isShow = false
      this.$apply()
      this.$emit('handleClose')
    }
  }
  watch = {
    isScaleModal(val) {
      if (!val) {
        this.isShow = true
      }
      else {
        this.isShow = false
      }
      this.$apply()
    }
  }
}
</script></view>
  </view>