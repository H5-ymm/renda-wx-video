
  <scroll-view scroll-y="true" bindscrolltolower="searchScrollLower" class="home-view page page_bottom">
    <view class="page_margin page">
      <view class="home-view-box">
        <block  wx:for="{{list}}" wx:key="index">
          <view class="page_card  {{activeIndex==index? 'page_card_active': ''}}" wx:if="{{list.length}}" bindtap="selectJob" data-wpyselectjob-a="{{index}}" data-wpyselectjob-b="{{item}}">
            <view class="weui-flex between">
              <view>
                <view class="page_card_name">{{item.job_name}}</view>
                <view class="page_card_num" wx:if="{{resumeType == '团队接单'}}">需求人数：{{item.required_number}}人</view>
                <view class="page_card_num" wx:else>需求人数：{{item.number}}人</view>
              </view>
              <view>
                <image mode="scaleToFill" class="page_card_icon" src="https://a.rsd123.com/image/images/right.png"/>
              </view>
            </view>
          </view>
        </block>
        <view  wx:if="{{!list.length}}" class="page_list">
          <image src="https://a.rsd123.com/image/images/noBg.png" class="page_noData" mode="scaleToFill"/>
          <view class="page_noData_text">暂无数据！</view>
        </view>
      </view>
    </view>
  </scroll-view>